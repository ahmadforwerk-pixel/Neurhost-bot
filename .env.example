# NeuroHost V4 - Environment Variables

# === TELEGRAM ===
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE
ADMIN_ID=YOUR_ADMIN_USER_ID

# === DATABASE ===
# PostgreSQL async connection string
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/neurhost
DATABASE_SSL_MODE=disable

# === CACHE ===
REDIS_URL=redis://localhost:6379/0

# === SECRETS ===
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=YOUR_BASE64_ENCODED_32_BYTE_KEY_HERE

# === LOGGING ===
LOG_LEVEL=INFO
LOG_FILE=/var/log/neurhost/app.log

# === DOCKER ===
DOCKER_HOST=unix:///var/run/docker.sock

# === DIRECTORIES ===
BOTS_DIR=/neurhost/bots

# === FEATURES ===
ENABLE_GITHUB_DEPLOY=true
ENABLE_USER_BOT_UPLOAD=true
RATE_LIMIT_ENABLED=true
